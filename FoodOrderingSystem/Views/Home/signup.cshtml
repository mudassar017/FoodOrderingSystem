
@{
    ViewData["Title"] = "Signup";
}
<script src="~/lib/bootstrap/dist/css/bootstrap.min.css"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<style type="text/css">
    <!--
    .style1 {
        font-size: 36px;
        font-weight: bold;
    }
    -->
</style>
<table width="60%" border="0" align="center">
    <tr>
        <td colspan="3" bgcolor="SkyBlue"><span class="style1 align-center">Signup </span></td>
    </tr>
    <tr>
        <td width="21%">&nbsp;</td>
        <td width="26%">&nbsp;</td>
        <td width="53%">&nbsp;</td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td>Name</td>
        <td><input type="text" id="txtName" class="form-control"></td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td>PhoneNumber</td>
        <td><input type="text" id="txtNumber" class="form-control"></td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td>Email</td>
        <td><input type="text" id="txtEmail" class="form-control"></td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td>Password</td>
        <td><input type="text" id="txtpassword" class="form-control"></td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td>Address </td>
        <td><input type="text" id="txtaddress" class="form-control"></td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td><label id="lblMessage"></label></td>
    </tr>
    <tr>
        <td>&nbsp;</td>

        <td>&nbsp;</td>
        <td><button id="btnSignup" class="btn btn-success">Signup</button></td>
    </tr>
</table>
<script>
    $(document).ready(function () {
        $('#btnSignup').click(function () {
            var Name = $('#txtName').val();
            var Number = $('#txtNumber').val();
            var Email = $('#txtEmail').val();
            var Password = $('#txtpassword').val();
            var Address = $('#txtaddress').val();

            var MyJson = { "name": Name, "number": Number, "email":Email, "password": Password, "address":Address,};



            $.ajax({
                type: "POST",
                url: "/api/Registration/RegistrationUser",
                data: JSON.stringify(MyJson),
                contentType: "application/json;",
                dataType: "json",
                success: function (response) {
                    if (response.status == "Insertion successfull") {
                        $('#txtName').val('');
                        $('#txtNumber').val('');
                        $('#txtEmail').val('');
                        $('#txtpassword').val('');
                        $('#txtaddress').val('');
                        $('#txtName').focus();
                        $('#lblMessage').html("Insertion successfull");
                        $('#lblMessage').css('color', 'green');
                    }
                    else {
                        $('#lblMessage').html("Insertion Failed");
                        $('#lblMessage').css('color', 'red');
                    }

                }















            });


        });
    });
</script>





